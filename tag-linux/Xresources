! Set to 256 color mode
URxvt*.termName: rxvt-256color

! Other options
URxvt*.geometry: 80x28
URxvt*.borderless: true 
URxvt*.internalBorder: 1

! True transparency
URxvt*.depth: 32
URxvt*.background: [95]#0c0d0e


! Clipboard management
URxvt.perl-ext-common: ...,clipboard
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
!use xclip instead of xsel
URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

! Native transparency
!URxvt*.transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
!URxvt*.shading: 33

! Scrollbar style: rxvt, plain, next or xterm
URxvt*.scrollBar: plain

! Font choice, run '$fc-list' to check install xft fonts 
URxvt*.font: xft:Ubuntu Mono:pixelsize=14,style=regular
!xft settings
Xft*.dpi: 96
Xft*.antialias: false
Xft*.hinting: full


! Set icon
!Urxvt*.icon: /usr/share

! ------------Color scheme----------------
URxvt*foreground:       #7f8f9f
! black + red
!urxvt*color0:     #3f3f3f
urxvt*color0:      #101010
urxvt*color1:      #705050
! green + yellow
urxvt*color2:      #60b48a
urxvt*color3:      #f0dfaf
! blue + purple
urxvt*color4:      #506070
urxvt*color5:      #dc8cc3
! cyan + white
urxvt*color6:      #8cd0d3
urxvt*color7:      #dcdccc
! bright-black + bright-red
urxvt*color8:      #000000
urxvt*color9:      #dca3a3
! bright-green + bright-yellow
urxvt*color10:     #c3bf9f
urxvt*color11:     #f0dfaf
! bright-blue + bright-purple
urxvt*color12:     #94bff3
urxvt*color13:     #ec93d3
! bright-cyan + bright-white
urxvt*color14:     #93e0e3
urxvt*color15:     #ffffff
!}}}
