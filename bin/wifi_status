#!/usr/bin/env bash

if $(uname -a | grep -q microsoft); then
  STATS=$(powershell.exe -Command "(netsh wlan show interfaces) -Match '([^B]SSID|Signal|Receive|Transmit)'" | tr -s '\r' ';')
  echo $STATS | sed -rn 's#SSID :\s+(.*); Rec.*:\s+([^ ]*); Trans.*:\s+([^ ]*); Sig.*: ([^ ]*).*#"\1" D:\2 U:\3 S:\4#p'
fi
